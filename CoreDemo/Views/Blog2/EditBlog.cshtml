@model EntitiyLayer.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>
<br />
@using (Html.BeginForm("EditBlog", "Blog2", FormMethod.Post))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x=>x.BlogID, new{@class="form-control"})
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.BlogTitle, new{@class="form-control"})
    <br />
    @Html.Label("Blog Thumbnail Url")
    @Html.TextBoxFor(x=>x.BlogThumbnailİmage, new{@class="form-control"})
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x=>x.Blogİmage, new{@class="form-control"})
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.cv,new {@class="form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.BlogContent,10,3, new{@class="form-control"})
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
}

