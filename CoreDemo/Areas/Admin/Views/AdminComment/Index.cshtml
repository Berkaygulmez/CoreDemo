@using EntitiyLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@*                                        <td><a href="#"><i class="fa fa-check text-navy"></i></a></td>
*@
<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Başlık</th>
                                    <th>Blog</th>
                                    <th>Puan</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.CommentId</th>
                                        <td>@item.CommentUserName</td>
                                        <td>@item.CommentTitle</td>
                                        <td>@item.Blog.BlogTitle</td>
                                        <td class="text-navy">

                                            @if (@item.BlogScore >= 8)
                                            {
                                                <i class="fa fa-long-arrow-up" style="color:green;">@item.BlogScore</i>
                                            }
                                            else if (@item.BlogScore >= 6)
                                            {
                                                <i class="fa fa-level-up" style="color:blue;">@item.BlogScore</i>
                                            }
                                            else if (@item.BlogScore >= 4)
                                            {
                                                <i class="fa fa-arrows-h" style="color:yellow;">@item.BlogScore</i>
                                            }
                                            else 
                                            {
                                                <i class="fa fa-level-down" style="color:red;">@item.BlogScore</i>
                                            }
                                            
                                        </td>
                                        <td>  @(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                                        <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


