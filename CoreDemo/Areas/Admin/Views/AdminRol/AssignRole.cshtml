@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input"/>
            <lable class="form-check-label" for="@Model[i].Exists">@Model[i].Name</lable>

         </div>
    }      
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
<br />
<a href="/Admin/AdminRol/UserRoleList/" class="btn btn-primary">Kullanıcı Listesine Dön</a>
